
///// Scale helper class and utilities /////

public class Scale
{
    public int count = 0;
    int[] scaleNotes;
    int[] noteWeights;
    int totalWeight = 100;
    int down = 0;
    int up = 0;

    public Scale(string scale, string root, int octDown, int octUp)
    {
        scaleNotes = s.getScaleNotes(scale, root);
        count = scaleNotes.Count();
        noteWeights = new int[count];
        down = octDown;
        up = octUp;

        // Set default weights.
        for(int i = 0; i < count; i++)
        {
            noteWeights[i] = 100 / count;
        }        
    }

    public void SetWeight(int index, int weight)
    {
        if(index < count)
        {
            noteWeights[index] = weight;
        }

        // Recalc total weight.
        totalWeight = 0;
        for(int i = 0; i < count; i++)
        {
            totalWeight += noteWeights[i];
        }        
    }

    public int RandomNote()
    {
        int note = 0;
        int r = s.random(totalWeight);
        //s.print(">>>", r);
        int offset = 0;

        for(int i = 0; i < count; i++)
        {
            offset += noteWeights[i];
            if(r < offset)
            {
                note = scaleNotes[i];
                break;
            }
        }

        // Which octave?
        int oct = s.random(0, 3) - 1;
        note += oct * 12;

        return note;
    }
}
